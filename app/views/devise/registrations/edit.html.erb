
<div class="box">
  <article class="media">
    <div class="media-content">
      <strong class="title is-5">Edit <%= resource_name.to_s.humanize %></strong><br><br>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true, input_html: { class:"input m-2" }, wrapper: false, label_html: { class:"label m-2" } %>

          <%= f.input :username, required: true, input_html: { class:"input m-2" }, wrapper: false, label_html: { class:"label m-2" } %>

          <%= f.input :email, required: true, input_html: { class:"input m-2" }, wrapper: false, label_html: { class:"label m-2" } %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, placeholder: "leave it blank if you don't want to change it", required: false, input_html: { class:"input m-2" }, wrapper: false, label_html: { class:"label m-2" } %>
          <%= f.input :password_confirmation, required: false, input_html: { class:"input m-2" }, wrapper: false, label_html: { class:"label m-2" } %>
          <%= f.input :current_password, placeholder: "we need your current password to confirm your changes", required: true, input_html: { class:"input m-2" }, wrapper: false, label_html: { class:"label m-2" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", class: 'button has-background-grey-light m-2' %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <div class="button m-2">
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>

      <div class="button m-2">
        <%= link_to "Back", :back %>
      </div>
    </div>
  </article>
</div>
